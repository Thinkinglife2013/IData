<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    >
	<LinearLayout
	    android:id="@+id/category"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:orientation="vertical"
	    android:weightSum="6"
	    android:visibility="visible">
	    
	    <!-- 手机存储区切换 -->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:layout_weight="0.75">
		     <!-- 内部存储区 -->
		    <RelativeLayout 
			    android:id="@+id/internal_store"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="47dp"
			    >
			  	<ImageView 
		        	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:background="@drawable/local_store_button"
			    	 />
			    <TextView 
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="@string/internal_store"
			    	android:textColor="@color/category_color"
			    	android:layout_centerInParent="true"
			    	android:textSize="10sp"
			    	 />
		    </RelativeLayout>
		    
		     <!-- SD卡 -->
		      <RelativeLayout 
			    android:id="@+id/sdcard"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:layout_marginRight="47dp"
			    >
			  	<ImageView 
		        	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:background="@drawable/local_store_button"
			    	 />
			    <TextView 
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="@string/sdcard"
			    	android:layout_centerInParent="true"
			    	android:textColor="@color/category_color"
			    	android:textSize="10sp"
			    	 />
		    </RelativeLayout>
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
		<!-- 照片 -->
		<RelativeLayout 
		    android:id="@+id/photo"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:background="@drawable/tab_selector"
		    android:layout_weight="1.05">
		    <ImageView 
		        android:id="@+id/photo_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/photo_icon"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="17dp" />
		     <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_toRightOf="@id/photo_icon"
		    	android:text="@string/photo"
		    	android:layout_marginLeft="17dp" 
		    	android:textColor="@color/category_color"
		    	android:textSize="18sp"/>
		 <!--     <ImageView 
		        android:id="@+id/corner_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/corner"
		    	android:layout_centerVertical="true"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="14dp" />
		     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/tab_divider"
		    	android:layout_centerVertical="true"
		    	android:layout_toLeftOf="@id/corner_icon"
		    	android:layout_marginRight="14dp" /> -->
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
		<!-- 视频-->
		<RelativeLayout 
		    android:id="@+id/video"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:background="@drawable/tab_selector"
		    android:layout_weight="1.05">
		    <ImageView 
		        android:id="@+id/photo_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/video_icon"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="17dp" />
		     <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_toRightOf="@id/photo_icon"
		    	android:text="@string/video"
		    	android:layout_marginLeft="17dp" 
		    	android:textColor="@color/category_color"
		    	android:textSize="18sp"/>
		<!--      <ImageView 
		        android:id="@+id/corner_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/corner"
		    	android:layout_centerVertical="true"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="14dp" />
		     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/tab_divider"
		    	android:layout_centerVertical="true"
		    	android:layout_toLeftOf="@id/corner_icon"
		    	android:layout_marginRight="14dp" /> -->
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
		<!-- 音乐 -->
		<RelativeLayout 
		    android:id="@+id/music"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:background="@drawable/tab_selector"
		    android:layout_weight="1.05">
		    <ImageView 
		        android:id="@+id/photo_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/music_icon"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="17dp" />
		     <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_toRightOf="@id/photo_icon"
		    	android:text="@string/music"
		    	android:layout_marginLeft="17dp" 
		    	android:textColor="@color/category_color"
		    	android:textSize="18sp"/>
		   <!--   <ImageView 
		        android:id="@+id/corner_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/corner"
		    	android:layout_centerVertical="true"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="14dp" />
		     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/tab_divider"
		    	android:layout_centerVertical="true"
		    	android:layout_toLeftOf="@id/corner_icon"
		    	android:layout_marginRight="14dp" /> -->
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
		<!-- 文档 -->
		<RelativeLayout 
		    android:id="@+id/doc"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:background="@drawable/tab_selector"
		    android:layout_weight="1.05">
		    <ImageView 
		        android:id="@+id/photo_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/doc_icon"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="17dp" />
		     <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_toRightOf="@id/photo_icon"
		    	android:text="@string/doc"
		    	android:layout_marginLeft="17dp" 
		    	android:textColor="@color/category_color"
		    	android:textSize="18sp"/>
		  <!--    <ImageView 
		        android:id="@+id/corner_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/corner"
		    	android:layout_centerVertical="true"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="14dp" />
		     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/tab_divider"
		    	android:layout_centerVertical="true"
		    	android:layout_toLeftOf="@id/corner_icon"
		    	android:layout_marginRight="14dp" /> -->
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
		<!-- 文件夹 -->
		<RelativeLayout 
		    android:id="@+id/folder"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp" 
		    android:background="@drawable/tab_selector"
		    android:layout_weight="1.05">
		    <ImageView 
		        android:id="@+id/photo_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/folder_icon"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="17dp" />
		     <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_toRightOf="@id/photo_icon"
		    	android:text="@string/folder"
		    	android:layout_marginLeft="17dp" 
		    	android:textColor="@color/category_color"
		    	android:textSize="18sp"/>
		 <!--     <ImageView 
		        android:id="@+id/corner_icon"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/corner"
		    	android:layout_centerVertical="true"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="14dp" />
		     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/tab_divider"
		    	android:layout_centerVertical="true"
		    	android:layout_toLeftOf="@id/corner_icon"
		    	android:layout_marginRight="14dp" /> -->
		     <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/index_divider"
		    	android:layout_alignParentBottom="true"
		    	 />
	    </RelativeLayout>
	    
	</LinearLayout>
	
	<ListView 
	    android:id="@+id/filelist_view"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="@color/transparent"
		android:visibility="gone"
		android:divider="@drawable/index_divider"
		/>
	
</LinearLayout>